<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; background-image: url("http://fungyung.com/data/out/2/63203543-aesthetic-wallpapers.png"); opacity: 80% }
        h3 { text-align: center; margin-bottom: 10px; }
        img {display: block; margin-left: auto; margin-right: auto;}
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa"></span>My Books</h1>
    </div>

    <form action = "/addBook" method = "get" style = "margin-bottom: 50px">
        <div class="form-group text-center">
            <input type="text" class="form-control" name="book1" title = "Add Book">
            <input class = "subButton" type="submit" value="Add" style = "float: right; margin-top: 10px">
        </div>
    </form>
    
    
    <div class="row">
    <% entries = data.map(function(elem) {
    return '<div class = "well" style = "margin-top: 20px"> <h3>' + elem.title + '</h3><img src="' + elem.imgUrl + '></img></div>';
}) -%>
<p><%- entries.join("") %></p>
</div>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
</script>
</body>
</html>
